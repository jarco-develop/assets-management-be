{
  "name": "assets-management-be",
  "version": "1.0.0",
  "description": "Backend for Crypto Assets Management",
  "author": "Jose Ramirez <jarcodallo@gmail.com>",
  "private": true,
  "engines": {
    "node": "^20.x || >=22.x"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:ci": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "tap --include src/**/*.spec.ts",
    "test:cov": "tap --include src/**/*.spec.ts --coverage-report=text-summary --coverage-report=lcovonly --allow-incomplete-coverage",
    "start:dockers": "docker-compose up -d",
    "stop:dockers": "docker-compose stop",
    "down:dockers": "docker-compose down -v --rmi=local  --remove-orphans",
    "logs": "docker-compose logs --tail=60 -f",
    "backend:logs": "npm run logs -- backend",
    "backend:start": "npm run start:dockers -- backend",
    "backend:stop": "npm run stop:dockers -- backend",
    "backend:rebuild": "docker-compose rm -s -v -f backend && npm run start:dockers -- --build --force-recreate backend",
    "backend:restart": "npm run backend:stop && npm run backend:start"
  },
  "dependencies": {
    "@fastify/compress": "^8.0.1",
    "@fastify/helmet": "^13.0.1",
    "@fastify/static": "^8.1.1",
    "@nestjs/common": "^11.0.11",
    "@nestjs/config": "^4.0.1",
    "@nestjs/core": "^11.0.11",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-fastify": "^11.0.11",
    "@nestjs/swagger": "^11.0.6",
    "@nestjs/typeorm": "^11.0.0",
    "alchemy-sdk": "^3.5.4",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "fastify": "5.2.1",
    "nestjs-pino": "^4.3.1",
    "passport-jwt": "^4.0.1",
    "pg": "^8.14.1",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.21",
    "viem": "^2.23.12"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@nestjs/cli": "^11.0.5",
    "@nestjs/schematics": "^11.0.2",
    "@nestjs/testing": "^11.0.11",
    "@tapjs/mock": "^4.0.1",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.13.10",
    "@types/passport-jwt": "^4.0.1",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "source-map-support": "^0.5.21",
    "tap": "^21.1.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1"
  },
  "tap": {
    "diag": true,
    "bail": false,
    "comments": true,
    "timeout": 20000
  }
}
